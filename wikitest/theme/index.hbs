  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 20px;
      background-color: #f2f2f2;
    }
    
    .title-bar {
      max-height: 60px;
      background-color: #00cc66;
      padding: 5px;
      color: #fff;
      display: flex;
      align-items: center;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
    }
    
    .title-bar img {
      max-height: 40px;
      margin-right: 10px;
      margin-left: 10px;
    }
    
    .title-bar .buttons {
      margin-right: 0px;
    }
    
    .title-bar a {
      background-color: #00cc66;
      color: #fff;
      padding: 18px 10px;
      font-size: 20px;
      border: none;
      cursor: pointer;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }
    
    .title-bar a:hover {
      background-color: #008040;
    }
    
    .title-bar b {
      background-color: #00cc66;
      color: #fff;
      padding: 7px 0px;
      font-size: 20px;
      border: none;
      cursor: pointer;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }
    
    .title-bar b:hover {
      background-color: #008040;
    }
    
    h1 {
      color: #333;
      font-size: 40px;
      margin-top: 10px;
    }
    
    p {
      color: #666;
      font-size: 20px;
      line-height: 1.5;
      margin-bottom: 40px;
    }
    
    .container {
      max-width: 600px;
      margin: 0 auto;
    }
    
    .logo {
      max-width: 200px;
      margin-bottom: 20px;
      margin-top: 95px;
    }
    
    .download-button {
      background-color: #00cc66;
      color: #fff;
      padding: 15px 30px;
      font-size: 24px;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }
    
    .download-button:hover {
      background-color: #008040;
    }
    
    /* Additional styles for dark mode */
    .dark-mode {
      background-color: #222;
      color: #fff;
    }

    .title-bar button.dark-mode-button {
      background-color: #00cc66;
      color: #fff;
      padding: 18px 20px;
      font-size: 20px;
      border: none;
      cursor: pointer;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }

    .title-bar button.dark-mode-button:hover {
      background-color: #008040;
    }

    body.dark-mode h1 {
      color: #8c8c8c;
    }
  </style>
</head>
